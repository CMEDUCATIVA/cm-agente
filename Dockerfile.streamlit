FROM python:3.12.3-slim

WORKDIR /app

ENV UV_PROJECT_ENVIRONMENT="/usr/local/"
ENV UV_COMPILE_BYTECODE=1

COPY pyproject.toml .
COPY uv.lock .
RUN pip install --no-cache-dir uv

# Install only the dependencies needed for the client application.
# NOTE: Do not use --frozen here so new client deps (e.g. openai) are picked up
# without requiring a uv.lock update in this image.
RUN uv sync --only-group client

# Plotly (para gr√°ficos en el chat) y Kaleido (PNG opcional)
RUN pip install --no-cache-dir plotly kaleido

COPY src/client/ ./client/
COPY src/schema/ ./schema/
COPY src/voice/ ./voice/
COPY src/streamlit_app.py .

EXPOSE 8501
CMD ["streamlit", "run", "streamlit_app.py"]
